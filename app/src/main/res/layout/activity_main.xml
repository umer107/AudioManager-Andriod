<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umer.andriod.audiomanager.MainActivity">

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mode"
      android:id="@+id/btn_mode"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@+id/btn_ring"
      android:layout_marginEnd="21dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RING"
        android:id="@+id/btn_ring"
        android:layout_alignBaseline="@+id/btn_mode"
        android:layout_alignBottom="@+id/btn_mode"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ring"
        android:layout_alignBottom="@+id/btn_ring"
        android:layout_toEndOf="@+id/btn_ring"
        android:layout_marginStart="26dp"
        android:text="Vibrate"
        android:id="@+id/btn_vibrate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_ring"
        android:text="SILENT"
        android:id="@+id/btn_slient"/>

</RelativeLayout>
